<Window x:Class="Library_App.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lib" 
        MinHeight="400" 
        MinWidth="400"
        WindowStartupLocation="CenterOwner"
        Background="#FFB5D5CA">

    <Grid MaxWidth="250" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="РЕГИСТРАЦИЯ" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="White"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <Border Grid.Row="1">
            <StackPanel>
                <TextBlock
                    Foreground="White"
                    Text="ЛОГИН:"/>
                <TextBox
                         Name="txtLogin" 
                         Margin="0,5,0,10"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2">
            <StackPanel>
                <TextBlock
            Foreground="White"
            Text="ПАРОЛЬ:"/>
                <PasswordBox
              Name="txtPassword" 
              Margin="0,5,0,10"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="3">
            <StackPanel>
                <TextBlock
                       Foreground="White"
           Text="ПОДТВЕРДИТЕ ПАРОЛЬ:"/>
                <PasswordBox
             Name="txtConfirmPassword" 
             Margin="0,5,0,10"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="4">
            <StackPanel>
                <TextBlock
                               Foreground="White"
                   Text="ИМЯ ПОЛЬЗОВАТЕЛЯ:"/>
                <TextBox
                 Name="txtName" 
                 Margin="0,5,0,10"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="5">
            <StackPanel>
                <TextBlock
                       Foreground="White"
           Text="РОЛЬ:"/>
                <ComboBox
          Name="cmbRole" 
          DisplayMemberPath="NameRole"
          Margin="0,5,0,20"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="7">
            <StackPanel
            Orientation="Horizontal" 
            HorizontalAlignment="Right">
                <Button Content="ОТМЕНА" 
            Width="80" 
            Margin="0,0,10,0" 
            Click="Cancel_Click"/>
                <Button Content="ЗАРЕГИСТРИРОВАТЬ" 
            Width="120" 
            Click="Register_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>