<Window x:Class="Library_App.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lib" MinHeight="250" MinWidth="400" Background="#FFB5D5CA">
    <Grid MaxWidth="250" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="АВТОРИЗАЦИЯ" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="ЛОГИН:" Foreground="White"/>
            <TextBox Name="txtLogin"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="ПАРОЛЬ:" Foreground="White"/>
            <PasswordBox Name="txtPassword"/>
        </StackPanel>

        <Button Grid.Row="3" Content="ВХОД" Name="btnLogin" Click="btnLogin_Click" Margin="0,20,0,0" Padding="10,5"/>
    </Grid>
</Window>